<Window
x:Class="Hearthstone_Archetype_Predictor.Views.MainWindow"
xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:vm="using:Hearthstone_Archetype_Predictor.ViewModels"
xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
Title="Hearthstone Archetype Predictor"
Width="900"
Height="850"
d:DesignHeight="850"
d:DesignWidth="900"
x:DataType="vm:MainWindowViewModel"
WindowStartupLocation="CenterScreen"
Icon="/Assets/avalonia-logo.ico"
mc:Ignorable="d"
RequestedThemeVariant="Dark"
>

    <Design.DataContext
    >
        <!--
        This only sets the DataContext for the previewer in an IDE,
        to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel>
        <Border
        Margin="0,5"
        CornerRadius="5">

            <TextBlock
            Margin="0,20"
            HorizontalAlignment="Center"
            FontSize="28"
            FontFamily="{StaticResource NunitoFont}"
            FontWeight="Black"
            FontStyle="Italic"
            Padding="10"
            >
                Hearthstone Archetype Predictor
            </TextBlock>


        </Border>

        <TextBox></TextBox>

        <Grid ShowGridLines="False"
              Margin="5"
              ColumnDefinitions="Auto,Auto, *"
              RowDefinitions="*"
              HorizontalAlignment="Stretch"
              >
            <TextBlock Grid.Column="0" Grid.Row="0"
                       Margin="0 5"
                       Padding="20"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Height="50"
                       FontFamily="{StaticResource NunitoFont}"
                       FontWeight="Bold"
                       FontStyle="Italic"
                       FontSize="16">
                Cards:
            </TextBlock>
            <StackPanel Grid.Column="0" Grid.Row="1" Margin="5, 50, 20, 0" HorizontalAlignment="Left" Orientation="Horizontal">
                <ItemsControl Grid.Column="0" Grid.Row="1" ItemsSource="{Binding CardCopies}" FontWeight="Bold" FontFamily="{StaticResource NunitoFont}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Padding="5" FontSize="14"></TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Grid.Column="1" Grid.Row="1" ItemsSource="{Binding CardNames}" FontWeight="Bold" FontFamily="{StaticResource NunitoFont}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Padding="5" FontSize="14"></TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="5 20">
                <ListBox ItemsSource="{Binding Images}"
                         Loaded="OnListBoxLoaded"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal"></VirtualizingStackPanel>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding}" Width="315" Height="512" Stretch="Uniform"></Image>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>
        <TextBlock HorizontalAlignment="Center" Padding="20">Your deck is of x archetype</TextBlock>
    </StackPanel>
</Window>
